<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9BC4E2"
    tools:context="com.assignment.binlix26.case_study_bmc.admin.EditStaffActivity">

    <ImageView
        android:id="@+id/edit_staff_photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_staff_photo"
        android:layout_marginTop="40dp"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <EditText
            android:id="@+id/edit_staff_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textColor="#ffffff"
            android:textSize="28sp" />

        <EditText
            android:id="@+id/edit_staff_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="Title"
            android:inputType="text"
            android:textColor="#ffffff"
            android:textSize="28sp" />

        <EditText
            android:id="@+id/edit_staff_department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="department"
            android:inputType="text"
            android:textColor="#ffffff"
            android:textSize="28sp" />

        <EditText
            android:id="@+id/edit_staff_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:ems="12"
            android:hint="Phone"
            android:inputType="phone"
            android:textColor="#ffffff"
            android:textSize="28sp" />
    </LinearLayout>

    <Button
        android:id="@+id/edit_staff_bt_update"
        style="@style/ButtonDesign"
        android:text="Update"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp" />

    <Button
        android:id="@+id/bt_take_photo"
        style="@style/ButtonDesign"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_alignEnd="@+id/edit_staff_bt_update"
        android:text="Change Photo" />

    <Button
        android:id="@+id/backButton"
        style="@style/ButtonDesign"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/edit_staff_bt_update"
        android:layout_marginBottom="69dp"
        android:text="Back" />

</RelativeLayout>
